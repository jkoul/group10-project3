<!-- Index Page -->
  <div class="main">
    <div class="main-header">
      <div class="questions">Questions</div>
      <div class="sort">Sort by: Newest/Votes</div>
    </div>

    <div class="entry-container">
      <script id="entryTemplate" type="text/x-handlebars-template">

        <div class="entry" id="entry-\{{id}}" data-id="\{{id}}">
          <div class="votes"></div>
          <div class="num-answers"></div>
          <div class="entry-title">\{{title}}</div>
          <div class="categories">\{{category}}</div>
          <p class="question-content">\{{content}}</p>
          <div class="date-user"></div>
        </div>
      </script>

    </div>

  </div>

<!-- New Question Page -->

  <form method="post" action="/questions" class="new-question" id="new-question">
    <p class="new-question-header">
      Ask a question
    </p>

    <input type="text" placeholder="Title" name="title" id="title"> <br>

    <textarea name="content" form="new-question" placeholder="What's your question?" id="content"></textarea> <br>

    <input type="text" placeholder="Category (optional)" name="category" id="category"> <br>

    <input type="submit" value="Submit" id="submit">
  </form>

<!-- Question Show -->

<div class="question-title">
</div>

<div class="timestamp">
</div>



<div class="num-answers">
  2 answers
</div>

<div class="answer-container">
  <div class="answer">
      <div class="answer-score">
        <img src="images/score.png"/>
      </div>
      <p class="answer-content">
      </p>
  </div>
</div>



<form method="post" action="/answers/questionId" class="new-answer" id="new-answer">
  <textarea name="content" form="new-answer" placeholder="Add your answer" id="new-answer-content" rows="8" cols="90"></textarea>
  <input type="submit" value="Submit" id="submit">
  <input type="hidden" name="question-id" value="questionId">

</form>
